    "@reduxjs/toolkit": "^1.9.5",
    "react-redux": "^8.1.2",
    "axios": "^1.5.0",
    "@tanstack/react-query": "^4.32.6",
    "react-hook-form": "^7.45.4",
    "@hookform/resolvers": "^3.2.0",
    "zod": "^3.22.2",
    "react-hot-toast": "^2.4.1",
    "lucide-react": "^0.263.1",
    "clsx": "^2.0.0",
    "tailwind-merge": "^1.14.0"
